{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<h1>Welcome to Home page</h1>
	<div class="row">
		{% for game in games %}
			<div class="card">
				<div class="imageCard">
					<img src="/assets/blog/images/{{ game.image }}" alt="{{ game.title }}">
				</div>
				<div class="container">
					<h4>{{ game.title }}
					</h4>
					<p class="date">Crée le
						{{ game.createdAt | date("d/m/Y") }}</p>
					<p class="date">Date du Tombola
						{{ game.dateEnd | date("d/m/Y") }}

						{{ game.dateEnd | date("H:i") }}</p>
					<p class="date">Date limite de Participation
						{{ game.dateEndParticipation | date("d/m/Y") }}</p>


					<p>Lot a gagner:
						<img src="{{ game.gift }}">
					</p>
					<a href="{{ path('show', {'id':game.id}) }}" class="btn">Détails</a>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
